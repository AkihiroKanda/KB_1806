<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity.MainFragment.EntrySheetFragment.EntrySheetFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/entry_sheet" />

                <TextView
                    android:id="@+id/textView_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="20sp"
                    tools:text="NTTドコモ　エントリーシート" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="入社後にやってみたい仕事をお書きください．\n（200文字以内）"
                android:textColor="#FFF" />

            <EditText
                android:id="@+id/editText_after_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="30dp"
                android:text="システムの開発を通じて何が困難であったかを説明すべき 現状，会議室を予約する際の課題定義や例示 ビデオ常にキャプション or フローをだす システム利用率のデータ、会議室を予約しなかった人のデータは含めず、予約した人の中で 提案システムを用いたユーザーの割合のみを示したほうがいいかも 提案手法の有効性がなんなのかいまいち分かりづらい．他の手法との比較が欲しい なぜ会議室予約に着目したのか"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="学生時代に最も真剣に取り組んできた事柄についてお書きください．\n（400文字以内）"
                android:textColor="#FFF" />

            <EditText
                android:id="@+id/editText_try"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="30dp"
                android:text="Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="当社を志望した理由をお書きください．\n（200文字以内）"
                android:textColor="#FFF" />

            <EditText
                android:id="@+id/editText_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="30dp"
                android:text="Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="あなたの会社選びの基準をお書きください．\n（200文字以内）"
                android:textColor="#FFF" />

            <EditText
                android:id="@+id/editText_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#FFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="30dp"
                android:text="Name"
                android:textColor="#000" />

            <Button
                android:id="@+id/button_submit_entry_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="提出する"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>