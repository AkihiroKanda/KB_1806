<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".WorkerDetailInfomationActivity.WorkerInfomationDetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="交流申請"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView_worker_photo_big"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@drawable/worker_illustration" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_worker_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="社員太郎" />

            <TextView
                android:id="@+id/textView_worker_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="人事部採用課技術採用グループ所属" />

            <TextView
                android:id="@+id/textView_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2015年入社　入社3年目" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="自己紹介"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView_self_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="TextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="業務内容"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView_work_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="TextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="休日の過ごし方"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView_holiday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>